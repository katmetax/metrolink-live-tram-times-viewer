---
import { DisplayTrams } from '../components/DisplayTrams';
import Layout from '../layouts/Layout.astro';

export const prerender = true;

const departingFrom = Astro.url.searchParams.get('departingFrom')?.toLowerCase() || '';
const arrivingTo = Astro.url.searchParams.get('arrivingTo')?.toLowerCase() || '';

---
<Layout title="Metrolink tram times">
	<main class="container">
    <DisplayTrams departureStation={departingFrom} arrivalStation={arrivingTo} client:load />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
</style>
